<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">
    <HBox fx:id="mainContainer" styleClass="link-component">
        <Label fx:id="nameLabel" text="Name" styleClass="name-label"/>
        <Label fx:id="linkLabel" text="Link" styleClass="link-label"/>
        <Region fx:id="spacer" HBox.hgrow="ALWAYS" styleClass=""/>
        <Label fx:id="categoryLabel" text="Category" styleClass="category-label"/>
    </HBox>
    <Label fx:id="descriptionLabel" text="Description goes here..." styleClass="description-label" visible="false" managed="false"/>
</fx:root>
