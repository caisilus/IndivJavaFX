<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.indiv.NewLinkController" spacing="10">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <TextField fx:id="nameField" promptText="Enter name"/>
    <TextField fx:id="linkField" promptText="Enter link"/>
    <TextField fx:id="categoryField" promptText="Enter category"/>
    <TextArea fx:id="descriptionTextArea" promptText="Enter description"/>
    <Button text="Submit" onAction="#handleSubmit"/>
</VBox>